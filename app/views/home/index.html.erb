<h1>Boring Yawn..</h1>

<h2>This blog is about really boring things.</h2>

<ul>
  <% @recent_posts.each do |post| %>
    <li>
      <%= link_to image_tag(post.avatar.thumb.url, :size => '32x32') %>
      <%= link_to "#{post.title}", post_path(post) %>
      <%= truncate post.body, length: 90, separator: ' ' %>
      <% if current_user %>
        <%= link_to 'edit', edit_post_path(post) %>
      <% end %>
    </li>
  <% end %>
</ul>

